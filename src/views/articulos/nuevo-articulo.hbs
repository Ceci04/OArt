{{#each error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

<h2 class="text-warning text-center display-4">Nuevo Articulo</h2>
<div class="col-md-5 mx-auto">
    <div class="card">
        <div class="card-body">
            <form action="/articulos/nuevo-articulo" method="POST">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                            <input type="text" name="numObra" class="form-control" placeholder="Nº de la Obra"
                                autofocus>
                        </div>
                        <div class="col">
                            <select name="tipo" class="form-control">
                                <option value="original">Obra Original</option>
                                <option value="escultura">Esculturas</option>
                                <option value="grafica">Obra Grafica</option>
                                <option value="fotografia">Fotografia</option>
                                <option value="mosaico">Mosaico</option>
                                <option value="antiguedades">Antiguedades</option>
                                <option value="tapices">Tapices</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" name="autor" class="form-control" placeholder="Autor">
                    <input type="text" name="titulo" class="form-control" placeholder="Titulo">
                </div>
                <div class="form-group">
                    <input type="text" name="procedimiento" class="form-control" placeholder="Procedimiento">
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                            <input type="text" name="realizado" class="form-control" placeholder="Año de Realización">
                        </div>
                        <div class="col">
                            <input type="text" name="medidas" class="form-control" placeholder="Medidas">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                            <input type="text" name="procedencia" class="form-control" placeholder="Procedencia">
                        </div>
                        <div class="col">
                            <input type="text" name="ubicacion" class="form-control" placeholder="Ubicación">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                            <input type="text" name="precio" class="form-control" placeholder="Precio">
                        </div>
                        <div class="col">
                            <input type="text" name="catalogo" class="form-control" placeholder="Catalogo">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <textarea name="descripcion" class="form-control" placeholder="Descripción"></textarea>
                    <textarea name="notas" class="form-control" placeholder="Notas"></textarea>
                </div>
                <div class="form-group">
                    <input type="text" name="img" class="form-control" placeholder="Nombre de la Imagen">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>